<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Giriş Yap"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/usernameTag"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/usernameTxt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:text="Kullanıcı Adı :" />

    <EditText
        android:id="@+id/usernameTxt"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/usernameTag"
        android:gravity="left" />

    <TextView
        android:id="@+id/passwordTag"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameTag"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:text="Parola :" />

    <EditText
        android:id="@+id/passwordTxt"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameTxt"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:layout_toEndOf="@+id/passwordTag"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordTag"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="75dp"
        android:onClick="LoginOnClick"
        android:text="Giriş Yap" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordTag"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="50dp"
        android:onClick="RegisterOnClick"
        android:text="Kayıt Ol" />
</RelativeLayout>